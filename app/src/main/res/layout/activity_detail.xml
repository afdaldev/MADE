<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_backdrop"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorPrimaryDark" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_poster"
            android:background="@color/colorAccent"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_backdrop"
            android:layout_marginTop="@dimen/ninety_five_dp"
            android:layout_marginStart="@dimen/twenty_five_dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            tools:text="@string/tools_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@+id/img_backdrop"
            app:layout_constraintStart_toEndOf="@+id/img_poster"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/five_dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_label_overview"
            android:text="@string/overview"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:layout_marginStart="@dimen/twenty_five_dp"
            android:layout_marginEnd="@dimen/twenty_five_dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_label_overview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:layout_marginStart="@dimen/twenty_five_dp"
            android:layout_marginEnd="@dimen/twenty_five_dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>